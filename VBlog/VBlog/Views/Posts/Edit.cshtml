@model VBlog.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Update", "Posts"))
        {
            if (Model.Id != -1)
            {
                <input type="hidden" name="id" value="@Model.Id" />
            }
            DateTime dateTime = Model.DateTime.Year > 2010 ? Model.DateTime : DateTime.Now;
            <label>Date</label>
            <input type="text" name="dateTime" value="@dateTime" />
            <br />
            <label>Title</label>
            <input type="text" name="title" value="@Model.Title" />
            <br />
            <label>Tags</label>
            <input type="text" name="tags" value="@ViewBag.Tags" />
            <br />
            <textarea name="body" rows="10" cols="80" value="">@Model.Body</textarea>
            <br />
            <input type="submit" name="submit" value="Submit!"/>
        }
    </div>
</body>
</html>
